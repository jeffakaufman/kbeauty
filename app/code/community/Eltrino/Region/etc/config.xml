<config>
    <modules>
        <Eltrino_Region>
            <version>1.1.0.0</version>
        </Eltrino_Region>
    </modules>
    <global>
        <models>
            <eltrino_region>
                <class>Eltrino_Region_Model</class>
                <resourceModel>eltrino_region_resource</resourceModel>
            </eltrino_region>
            <adminhtml>
                <rewrite>
                    <customer_renderer_region>Eltrino_Region_Model_Adminhtml_Customer_Renderer_Region</customer_renderer_region>
                </rewrite>
            </adminhtml>
            <customer>
                <rewrite>
                    <customer>Eltrino_Region_Model_Customer</customer>
                </rewrite>
            </customer>
            <checkout>
                <rewrite>
                    <type_onepage>Eltrino_Region_Model_Type_Onepage</type_onepage>
                </rewrite>
            </checkout>
            <eltrino_region_resource>
                <class>Eltrino_Region_Model_Resource</class>
                <entities>
                    <entity>
                        <table>eltrino_region_entity</table>
                    </entity>
                    <step>
                        <table>eltrino_region_step</table>
                    </step>
                </entities>
            </eltrino_region_resource>
        </models>
        <resources>
            <eltrino_region_setup>
                <setup>
                    <module>Eltrino_Region</module>
                </setup>
            </eltrino_region_setup>
        </resources>
        <blocks>
            <eltrino_region>
                <class>Eltrino_Region_Block</class>
            </eltrino_region>
        </blocks>
        <helpers>
            <eltrino_region>
                <class>Eltrino_Region_Helper</class>
            </eltrino_region>
            <directory>
                <rewrite>
                    <data>Eltrino_Region_Helper_Directory</data>
                </rewrite>
            </directory>
        </helpers>
        <common_settings>
            <US>
                <lower_states>
                    <label>Lower 48 States</label>
                    <regions_code>
                        <AK/>
                        <AS/>
                        <AF/>
                        <AA/>
                        <AC/>
                        <AE/>
                        <AM/>
                        <AP/>
                        <DC/>
                        <FM/>
                        <GU/>
                        <HI/>
                        <MH/>
                        <MP/>
                        <PW/>
                        <PR/>
                        <VI/>
                    </regions_code>
                </lower_states>
                <states_only>
                    <label>States Only</label>
                    <regions_code>
                        <AS/>
                        <AF/>
                        <AA/>
                        <AC/>
                        <AE/>
                        <AM/>
                        <AP/>
                        <DC/>
                        <FM/>
                        <GU/>
                        <MH/>
                        <MP/>
                        <PW/>
                        <PR/>
                        <VI/>
                    </regions_code>
                </states_only>
            </US>
        </common_settings>
    </global>
    <adminhtml>
        <translate>
            <modules>
                <Eltrino_Region>
                    <files>
                        <default>Eltrino_Region.csv</default>
                    </files>
                </Eltrino_Region>
            </modules>
        </translate>
        <events>
            <admin_system_config_changed_section_eltrino_region>
                <observers>
                    <eltrino_region_observer>
                        <class>eltrino_region/observer</class>
                        <method>storeCountryDisabledRegions</method>
                    </eltrino_region_observer>
                </observers>
            </admin_system_config_changed_section_eltrino_region>
        </events>
        <layout>
            <updates>
                <eltrino_region>
                    <file>eltrino/region.xml</file>
                </eltrino_region>
            </updates>
        </layout>
    </adminhtml>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <eltrino_region before="Mage_Adminhtml">Eltrino_Region_Adminhtml</eltrino_region>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <default>
        <eltrino_region>
            <use_default>1</use_default>
        </eltrino_region>
    </default>
</config>